#program to split words in a sring
bhanu=("my name is bhanu")
print(bhanu.split(' '))
print("##################################################")

#program to add two strings
bhanu=("bhanu ,cutie ,kishor ,chethan ,dheeraj ,IT-C ")
prasad=("student")
listy=bhanu.split(',')
listy1=[]
for i in listy:
    listy1.append(i+str(prasad))
print(listy1)
